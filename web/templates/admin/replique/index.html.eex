<h2>Listing repliques</h2>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Image</th>
      <th>Song</th>
      <th>Video</th>
      <th>Published</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for replique <- @repliques do %>
    <tr>
      <td><%= replique.title %></td>
      <td><%= replique.description %></td>
      <td><img src="<%= Peter.RepliqueImage.url({replique.image, replique}) %>"/></td>
      <td><a href="<%= Peter.RepliqueSong.url({replique.song, replique}) %>" title="Écouter le son" target="_blank">Écouter le son</a></td>
      <td><a href="<%= Peter.RepliqueVideo.url({replique.video, replique}) %>" title="Voir la vidéo" target="_blank">Voir la vidéo</a></td>
      <td><%= replique.published %></td>

      <td class="text-right">
        <%= link "Show", to: admin_replique_path(@conn, :show, replique), class: "btn btn-default btn-xs" %>
        <%= link "Edit", to: admin_replique_path(@conn, :edit, replique), class: "btn btn-default btn-xs" %>
        <%= link "Delete", to: admin_replique_path(@conn, :delete, replique), method: :delete, data: [confirm: "Are you sure?"], class: "btn btn-danger btn-xs" %>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<%= link "New replique", to: admin_replique_path(@conn, :new) %>
